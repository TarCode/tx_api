{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Transactamon",
      "description": "A transactional backend",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:3000",
    "basePath": "/api/",
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "security": {
      "bearerAuth": []
    },
    "paths": {
			"/auth/company/register": {
        "post": {
            "tags": [
              "User"
            ],
            "description": "Create new company with an owner in system",
            "parameters": [
              {
                "name": "user",
                "in": "body",
                "description": "User with company that we want to create",
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "New company with owner is created",
                "schema": {
                  "$ref": "#/definitions/Company"
                }
              }
            }
          }
			},
			"/auth/register": {
        "post": {
            "tags": [
              "User"
            ],
            "description": "Create new user within a company",
            "parameters": [
              {
                "name": "user",
                "in": "body",
                "description": "User that we want to create",
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "New user is created",
                "schema": {
                  "$ref": "#/definitions/LoggedInUser"
                }
              }
            }
          }
			},
			"/auth/login": {
        "post": {
            "tags": [
              "User"
            ],
            "description": "Login user within a company",
            "parameters": [
              {
                "name": "user",
                "in": "body",
                "description": "User that we want to login",
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "User logged in",
                "schema": {
                  "$ref": "#/definitions/LoggedInUser"
                }
              }
            }
          }
      },
      "/accounts": {
        "get": {
          "tags": [
            "Accounts"
          ],
          "summary": "Accounts in system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Accounts"
              }
            }
          }
        },

        "post": {
            "tags": [
              "Accounts"
            ],
            "description": "Create new account in system",
            "parameters": [
              {
                "name": "account",
                "in": "body",
                "description": "Account that we want to create",
                "schema": {
                  "$ref": "#/definitions/Account"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "New account is created",
                "schema": {
                  "$ref": "#/definitions/Account"
                }
              }
            }
          }
      },

      "/transactions": {
        "get": {
          "tags": [
            "Transactions"
          ],
          "summary": "Transactions in system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Transactions"
              }
            }
          }
        }
      },
      "/transactions/credit": {
        "post": {
            "tags": [
              "Transactions"
            ],
            "description": "Create new credit transaction in system",
            "parameters": [
              {
                "name": "transaction",
                "in": "body",
                "description": "Transaction that we want to create",
                "schema": {
                  "$ref": "#/definitions/Transaction"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "New transaction is created",
                "schema": {
                  "$ref": "#/definitions/Transaction"
                }
              }
            }
          }
      },
      "/transactions/debit": {
        "post": {
            "tags": [
              "Transactions"
            ],
            "description": "Create new debit transaction in system",
            "parameters": [
              {
                "name": "transaction",
                "in": "body",
                "description": "Transaction that we want to create",
                "schema": {
                  "$ref": "#/definitions/Transaction"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "New transaction is created",
                "schema": {
                  "$ref": "#/definitions/Transaction"
                }
              }
            }
          }
      }

    },
    "definitions": {
			"User": {
				"required": [
						"email",
						"company",
						"password"
				],
				"properties": {
						"email": {
								"type": "string"
						},
						"company": {
								"type": "string"
						},
						"password": {
								"type": "string"
						}
				}
			},
			"LoggedInUser": {
				"properties": {
					"user": {
							"type": "object"
					}
			}
			},
			"Account": {
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "uniqueItems": true
          },
          "balance": {
            "type": "number"
          }
        }
      },
      "Transaction": {
        "required": [
          "account",
          "amount"
        ],
        "properties": {
          "account": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          }
        }
      }
    }
  }