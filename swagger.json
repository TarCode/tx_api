{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Transactamon",
      "description": "A transactional backend",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:3000",
    "basePath": "/api/",
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/accounts": {
        "get": {
          "tags": [
            "Accounts"
          ],
          "summary": "Accounts in system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Accounts"
              }
            }
          }
        },

        "post": {
            "tags": [
              "Accounts"
            ],
            "description": "Create new account in system",
            "parameters": [
              {
                "name": "account",
                "in": "body",
                "description": "Account that we want to create",
                "schema": {
                  "$ref": "#/definitions/Account"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "New account is created",
                "schema": {
                  "$ref": "#/definitions/Account"
                }
              }
            }
          }
      },

      "/transactions": {
        "get": {
          "tags": [
            "Transactions"
          ],
          "summary": "Transactions in system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Transactions"
              }
            }
          }
        }
      },
      "/transactions/credit": {
        "post": {
            "tags": [
              "Transactions"
            ],
            "description": "Create new credit transaction in system",
            "parameters": [
              {
                "name": "transaction",
                "in": "body",
                "description": "Transaction that we want to create",
                "schema": {
                  "$ref": "#/definitions/Transaction"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "New transaction is created",
                "schema": {
                  "$ref": "#/definitions/Transaction"
                }
              }
            }
          }
      },
      "/transactions/debit": {
        "post": {
            "tags": [
              "Transactions"
            ],
            "description": "Create new debit transaction in system",
            "parameters": [
              {
                "name": "transaction",
                "in": "body",
                "description": "Transaction that we want to create",
                "schema": {
                  "$ref": "#/definitions/Transaction"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "New transaction is created",
                "schema": {
                  "$ref": "#/definitions/Transaction"
                }
              }
            }
          }
      }

    },
    "definitions": {
      "Account": {
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "uniqueItems": true
          },
          "balance": {
            "type": "number"
          }
        }
      },
      "Transaction": {
        "required": [
          "account",
          "amount"
        ],
        "properties": {
          "account": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          }
        }
      }
    }
  }